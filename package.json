{
  "name": "angular-electron",
  "version": "",
  "description": "",
  "keywords": [
    "angular",
    "angular 5",
    "electron",
    "typescript",
    "sass"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npx electron-builder install-app-deps",
    "ng": "ng",
    "// start": "node hooks/environments/set_profile.js && npm run ng:serve && npm run electron:serve",
    "start": "node hooks/environments/set_profile.js && npm-run-all -p ng:serve electron:serve",
    "build": "node hooks/environments/set_profile.js && ng build && npm run electron:tsc",
    "build:prod": "node hooks/environments/set_profile.js && ng build --prod && npm run electron:tsc",
    "ng:serve": "ng serve",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "npm run electron:tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "test": "karma start ./karma.conf.js",
    "pree2e:build": "webdriver-manager update --gecko false && npm run ng serve",
    "pree2e:protractor": "wait-on http-get://localhost:4200/ && protractor ./protractor.conf.js",
    "e2e": "npm-run-all -p -r pree2e:build pree2e:protractor"
  },
  "dependencies": {
    "bootstrap": "^4.1.0",
    "jquery": "^3.3.1",
    "lowdb": "^1.0.0",
    "popper.js": "^1.14.3"
  },
  "devDependencies": {
    "@angular/cli": "1.7.4",
    "@angular/common": "5.2.10",
    "@angular/compiler": "5.2.10",
    "@angular/compiler-cli": "5.2.10",
    "@angular/core": "5.2.10",
    "@angular/forms": "5.2.10",
    "@angular/http": "5.2.10",
    "@angular/language-service": "5.2.10",
    "@angular/platform-browser": "5.2.10",
    "@angular/platform-browser-dynamic": "5.2.10",
    "@angular/router": "5.2.10",
    "@ng-bootstrap/ng-bootstrap": "^1.1.2",
    "@types/core-js": "0.9.36",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "2.8.6",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "7.0.7",
    "angular-svg-round-progressbar": "^1.2.1",
    "codelyzer": "4.3.0",
    "core-js": "2.5.5",
    "cross-env": "5.1.4",
    "dotenv": "5.0.1",
    "electron": "1.8.4",
    "electron-builder": "20.10.0",
    "electron-reload": "1.2.2",
    "fs-extra": "5.0.0",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "1.4.2",
    "karma-jasmine": "1.1.1",
    "karma-jasmine-html-reporter": "1.0.0",
    "ng-circle-progress": "^0.9.9",
    "ngx-electron": "^1.0.4",
    "npm-run-all": "4.1.2",
    "npx": "10.2.0",
    "protractor": "5.3.1",
    "replace": "0.3.0",
    "rxjs": "5.5.10",
    "ts-node": "6.0.0",
    "tslint": "5.9.1",
    "typescript": "2.6.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.26"
  }
}
