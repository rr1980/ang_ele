{
  "compileOnSave": false,
  "compilerOptions": {
    "types": [
      "node"
    ],
    "baseUrl": ".",
    // "paths": {
    //   "@angular/*": ["./node_modules/@angular/*"]
    // },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es6",
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "diagnostics": true,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": false,
    "debug": true,
    "skipCodeGeneration": true,
    "preserveWhitespaces": false,
    "annotationsAs": "decorators"
  }
}